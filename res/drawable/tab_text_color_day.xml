<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- No Pressed -->
    <!-- No focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="@color/text_color_black"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="@color/text_color_white"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="@color/text_color_black"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="@color/text_color_white"/>

    <!-- Pressed -->
    <!-- No focused states -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="false" android:color="@color/text_color_black"/>
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="true" android:color="@color/text_color_white"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="false" android:color="@color/text_color_black"/>
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="true" android:color="@color/text_color_white"/>

</selector>